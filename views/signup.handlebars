 <link rel="stylesheet" href="/css/signup.css">

 <div class='signup-modal'>
  <div class='heading'>
    <h3>Create an account</h3>
  </div>
  <div class='content'>
    <div class='field-group'>
      <input class='signup-form' name='email' placeholder='Email Address' type='email'>
    </div>
    <div class='field-group'>
      <input class='signup-form' name='password' placeholder='Password' type='password'>
    </div>
    <input class='signup-button' type='submit' value='Sign up'>
  </div>
  <div class='footer'>
    <p>
      Already have an account?
      <span>
        <a class='link' href='#'>
          Sign in.
        </a>
      </span>
    </p>
  </div>
</div>