 <link rel="stylesheet" href="/css/signup.css">

 <div class='signup-modal'>
  <div class='heading'>
    <h3>Create an account</h3>
  </div>
  <div class='content'>
    <form action="" class="signup">
    <div class='field-group'>
      <input id="email-input" class='signup-form' name='email' placeholder='Email Address' type='email'>
    </div>
    <div class='field-group'>
      <input id="password-input" class='signup-form' name='password' placeholder='Password' type='password'>
    </div>
    <input class='signup-button' type='submit' value='Sign up'>
    </form>
  </div>
  <div class='footer'>
    <p>
      Already have an account?
      <span>
        <a class='link' href='/login'>
          Sign in.
        </a>
      </span>
    </p>
  </div>
</div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="/js/signup.js"></script>