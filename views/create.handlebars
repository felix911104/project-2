</ul>

<h2>Create an Event</h2>
<form id="createevent" class="button-size">
	<textarea type="text" name="networkingEvent"></textarea>
	<button type="submit">Submit Event</button>
</form>

<div class="row form-group">

	<div class="col-md-12">
		<label class="" for="subject">Name of the Event: </label>
		<input type="subject" id="eventName" class="form-control">
	</div>
</div>

<div class="row form-group">

	<div class="col-md-12">
		<label class="" for="subject">Company: </label>
		<input type="subject" id="company" class="form-control">
	</div>
</div>

<div class="row form-group">

	<div class="col-md-12">
		<label class="" for="subject">Address: </label>
		<input type="subject" id="address" class="form-control">
	</div>
</div>

<div class="row form-group">

	<div class="col-md-12">
		<label class="" for="subject">Location: </label>
		<input type="subject" id="location" class="form-control">
	</div>
</div>

<div class="row form-group">
	<div class="col-md-6 mb-3 mb-md-0">
		<label class="">Start Date</label>
		<input type="date" class="form-control">
	</div>
	<div class="col-md-6">
		<label class="">End Date</label>
		<input type="date" class="form-control">
	</div>
</div>

<div class="row form-group">

	<div class="col-md-12">
		<label class="" for="subject">Host Name: </label>
		<input type="subject" id="hostName" class="form-control">
	</div>
</div>

<div class="row form-group">

	<div class="col-md-12">
		<label class="" for="email">Email</label>
		<input type="email" id="email" class="form-control">
	</div>
</div>

<div class="row form-group">
	<div class="col-md-12">
		<input type="submit" value="Create Event" class="btn btn-primary py-2 px-4 text-white">
	</div>
</div>


</form>
</div>

<script type="text/javascript">
	$("#createevent").on("submit", function(event) {
		event.preventDefault();
		var newEvent = {
			event: $("#createevent [name=event]").val().trim()
		};

		$.ajax("/api/events", {
			type: "POST",
			data: newEvent
		}).then(
			function () {
				console.log("created a new event");
				location.reload();
			}
		);
	});


</script>

